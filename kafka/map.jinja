# -*- coding: utf-8 -*-
# vim: ft=jinja

{% import_yaml "kafka/defaults.yaml" as defaults %}
{% import_yaml "kafka/osmap.yaml" as osmap %}
{% import_yaml "kafka/codenamemap.yaml" as codemap %}

{# get the settings for the os_family grain #}
{% set osfam = salt['grains.filter_by'](osmap) or {} %}
{# get the settings for the oscodename grain, os_family data will override
    oscodename data #}
{% set oscode = salt['grains.filter_by'](codemap,
                                         grain='oscodename',
                                         merge=osfam) or {} %}

{# merge the os family/codename specific data over the defaults #}
{% do defaults.kafka.update(oscode) %}

{# merge the pillar:lookup dict into the defaults/os specific dict #}
{% set lookup = salt['pillar.get']('kafka:lookup',
                                   default=defaults.kafka,
                                   merge=True) %}

{# merge the actual kafka pillar into the above combined dict #}
{% set kafka = salt['pillar.get']('kafka', default=lookup, merge=True) %}
